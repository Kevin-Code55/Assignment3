<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-warning text-dark">
                <h2 class="h4 mb-0">Edit Workout Entry</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/workouts/edit/<%= workout._id %>">
                    <!-- Exercise Name Area -->
                    <div class="mb-3">
                        <label for="exercise" class="form-label">Exercise Name</label>
                        <input type="text" class="form-control" id="exercise" name="exercise" 
                               value="<%= workout.exercise %>" required>
                    </div>

                    <!-- Reps Area -->
                    <div class="mb-3">
                        <label for="reps" class="form-label">Reps</label>
                        <input type="number" class="form-control" id="reps" name="reps" 
                               value="<%= workout.reps %>" required>
                    </div>

                    <!-- Weight Area -->
                    <div class="mb-3">
                        <label for="weight" class="form-label">Weight (lbs)</label>
                        <input type="number" class="form-control" id="weight" name="weight" 
                               value="<%= workout.weight %>" required>
                    </div>

                    <!-- Update Area -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-warning">Update Entry</button>
                        <a href="/workouts" class="btn btn-link text-center mt-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>